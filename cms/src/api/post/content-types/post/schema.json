{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": "記事"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "summary": {
      "type": "text",
      "required": true
    },
    "cover": {
      "type": "media",
      "multiple": false
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "mappedBy": "posts"
    },
    "blocks": {
      "type": "dynamiczone",
      "components": [
        "content.rich-text",
        "content.colored-text",
        "media.figure",
        "media.gallery",
        "embed.twitch-live",
        "embed.twitch-vod",
        "embed.youtube",
        "layout.callout",
        "layout.columns",
        "layout.separator",
        "ads.inline-slot"
      ]
    },
    "author": {
      "type": "string"
    },
    "source": {
      "type": "string"
    },
    "publishedAt": {
      "type": "datetime"
    },
    "heroHighlight": {
      "type": "boolean",
      "default": false
    },
    "commentDefaultAuthor": {
      "type": "string",
      "default": "名無しのユーザーさん"
    }
  }
}
