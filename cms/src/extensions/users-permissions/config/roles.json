{
  "roles": [
    {
      "name": "Public",
      "description": "Default role given to unauthenticated user.",
      "type": "public",
      "permissions": {
        "api::post": {
          "controllers": {
            "post": {
              "actions": ["find", "findOne"]
            }
          }
        },
        "api::comment": {
          "controllers": {
            "comment": {
              "actions": ["list", "submit", "report", "deleteOwn"]
            }
          }
        }
      }
    },
    {
      "name": "Authenticated",
      "description": "Default role given to authenticated user.",
      "type": "authenticated",
      "permissions": {}
    }
  ]
}
