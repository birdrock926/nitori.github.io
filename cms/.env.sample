# Strapi Core
HOST=0.0.0.0
PORT=1337
PUBLIC_URL=https://cms.example.com
APP_KEYS=replace-with-comma-separated-keys
API_TOKEN_SALT=replace-with-salt
ADMIN_JWT_SECRET=replace-with-admin-jwt
JWT_SECRET=replace-with-jwt
NODE_ENV=development
LOG_LEVEL=info

# Hash & Alias
HASH_PEPPER=replace-with-pepper
ALIAS_SALT=replace-with-alias-salt

# CAPTCHA
CAPTCHA_PROVIDER=none
CAPTCHA_SECRET=set-before-production

# Allowed Origins (comma separated)
PUBLIC_FRONT_ORIGINS=https://example.com,https://preview.example.com

# Rate limit (per minute/hour/day)
RATE_LIMITS_MIN=5
RATE_LIMITS_HOUR=30
RATE_LIMITS_DAY=200

# Comment moderation
COMMENTS_AUTO_PUBLISH=false

# Webhook to GitHub Actions
GITHUB_WORKFLOW_OWNER=github-owner
GITHUB_WORKFLOW_REPO=github-repo
GITHUB_WORKFLOW_ID=dispatch-workflow.yml
GITHUB_WORKFLOW_TOKEN=ghp_xxx
GITHUB_WORKFLOW_BRANCH=main

# Database (SQLite default)
DATABASE_CLIENT=sqlite
DATABASE_FILENAME=.tmp/data.db

# Upload
UPLOAD_PROVIDER=local
UPLOAD_SIZE_LIMIT=268435456
# Example for OCI Object Storage provider (future)
#UPLOAD_PROVIDER=oci
#OCI_BUCKET=your-bucket
#OCI_NAMESPACE=your-namespace
#OCI_REGION=ap-tokyo-1
#OCI_S3_ENDPOINT=https://objectstorage.ap-tokyo-1.oraclecloud.com
#OCI_PUBLIC_URL=https://objectstorage.ap-tokyo-1.oraclecloud.com/n/namespace/b/bucket/o
#OCI_ACCESS_KEY=your-access-key
#OCI_SECRET_KEY=your-secret-key

# SMTP (Nodemailer provider)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USERNAME=apikey
SMTP_PASSWORD=replace-with-password
SMTP_FROM="Kininatta News <noreply@example.com>"
SMTP_REPLY_TO=contact@example.com
