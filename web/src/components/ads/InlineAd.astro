---
import { ADSENSE } from '@config/site';

const { slot } = Astro.props as { slot: string };
const clientId = ADSENSE.clientId;
---
{clientId && slot ? (
  <aside class="ad-panel card" role="complementary" aria-label="広告">
    <ins
      class="adsbygoogle"
      style="display:block"
      data-ad-client={clientId}
      data-ad-slot={slot}
      data-ad-format="auto"
      data-full-width-responsive="true"
    ></ins>
    <script is:inline>
      (adsbygoogle = window.adsbygoogle || []).push({});
    </script>
  </aside>
) : null}
