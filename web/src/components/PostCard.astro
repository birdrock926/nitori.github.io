---
import type { Post } from '@lib/strapi';
import { formatDateTime, relative } from '@lib/format';
const { post } = Astro.props as { post: Post };
---
<article class="card" style="gap: 0.5rem;">
  <h3 style="font-size: 1.2rem; margin: 0;"><a href={`/posts/${post.slug}/`}>{post.title}</a></h3>
  <p class="muted" style="margin: 0;">{post.summary}</p>
  <div style="display: flex; gap: 0.5rem; flex-wrap: wrap; align-items: center;">
    <time dateTime={post.publishedAt} class="muted">
      {formatDateTime(post.publishedAt)}（{relative(post.publishedAt)}）
    </time>
    {post.tags.slice(0, 2).map((tag) => (
      <a class="tag-chip" href={`/tags/${tag.slug}/`}>{tag.name}</a>
    ))}
  </div>
</article>
