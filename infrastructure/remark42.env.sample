# Remark42 基本設定
SITE=game-news
SECRET=replace-with-remark42-secret
ADMIN_PASSWD=replace-with-admin-password
# 任意: 管理 GUI のログイン ID を SITE と別にしたい場合に設定
# ADMIN_SHARED_ID=game-news-admin

# 公開 URL / ポート設定
REMARK_URL=http://0.0.0.0:8080
REMARK_PORT=8080

# 認証まわり
AUTH_ANON=true
AUTH_EMAIL=false
AUTH_GOOGLE=false
AUTH_GITHUB=false
AUTH_TWITTER=false

# 通知・モデレーション
NOTIFY_TYPE=telegram
NOTIFY_USERS=none
IMAGE_PROXY_HTTP2_DISABLE=true
